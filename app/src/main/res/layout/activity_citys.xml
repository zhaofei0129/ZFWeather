<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muyi.zhaofei.zfweather.CitysActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_citys_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            />

        <Button
            android:id="@+id/id_add_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            />
        <Button
            android:id="@+id/id_d_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            />
        <Button
            android:id="@+id/id_c_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            />
        <Button
            android:id="@+id/id_s_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            />
    </LinearLayout>
</LinearLayout>
